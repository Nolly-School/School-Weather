<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/favorite_item"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/item_weather_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:textColor="@color/blue_700"
            android:textSize="@dimen/text_size_item_title" />

        <TextView
            android:id="@+id/item_weather_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:textColor="@color/blue_500"
            android:textSize="@dimen/text_size_item_desc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/item_weather_icon"
            android:layout_width="@dimen/icon_size_item"
            android:layout_height="@dimen/icon_size_item"
            android:layout_marginEnd="10sp"
            android:contentDescription="@string/placeholder"
            android:src="@drawable/weather_cloudy_grey" />

        <TextView
            android:id="@+id/item_weather_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:textColor="@color/blue_700"
            android:textSize="@dimen/text_size_item_temp" />
    </LinearLayout>

</GridLayout>
